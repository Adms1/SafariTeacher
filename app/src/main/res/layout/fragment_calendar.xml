<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:agendaCalendar="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_txt"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_70sdp"
                android:gravity="center|center_vertical"
                android:src="@drawable/back"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/month_year_txt"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_105sdp"
                android:gravity="center|center_vertical"
                android:text="Month"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/forwad_txt"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:gravity="center|center_vertical"
                android:src="@drawable/forwad"
                android:visibility="gone" />
        </LinearLayout>

        <com.github.tibolte.agendacalendarview.AgendaCalendarView
            android:id="@+id/agenda_calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_14sdp"
            agendaCalendar:agendaCurrentDayTextColor="@color/blue"
            agendaCalendar:calendarColor="@color/white"
            agendaCalendar:calendarCurrentDayTextColor="@color/blue"
            agendaCalendar:calendarDayTextColor="@color/text_color"
            agendaCalendar:calendarHeaderColor="@color/blue"
            agendaCalendar:calendarPastDayTextColor="@color/text_color"
            agendaCalendar:fabColor="@color/theme_accent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_event_fab_btn"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="-90dp"
            android:src="@drawable/plus_outline"
            app:backgroundTint="@color/blue" />


    </LinearLayout>
</layout>