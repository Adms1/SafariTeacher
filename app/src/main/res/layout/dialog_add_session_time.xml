<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_3sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/confirm_title_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/_15sdp"
            android:text="ADD SESSION TIME"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/dark_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/start_date_txt_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"

            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_3sdp"
            android:text="@string/start_date"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/start_date_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1.5"
            android:background="@drawable/edit_box"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_3sdp"
            android:text="15/03/2018"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/end_date_txt_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_3sdp"
            android:text="@string/end_date"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/end_date_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1.5"
            android:background="@drawable/edit_box"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_3sdp"
            android:text="15/03/2018"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3sdp">

            <TableRow
                android:id="@+id/header_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="2.42" />

                <TextView
                    android:id="@+id/sun_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.65"
                    android:background="@color/blue"
                    android:gravity="center_vertical|center"
                    android:text="Sun"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/mon_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_weight="0.65"
                    android:background="@color/blue"
                    android:gravity="center_vertical|center"
                    android:text="Mon"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tue_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_weight="0.65"
                    android:background="@color/blue"
                    android:gravity="center_vertical|center"
                    android:text="Tue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/wed_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_weight="0.65"
                    android:background="@color/blue"
                    android:gravity="center_vertical|center"
                    android:text="Wed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/thur_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_weight="0.65"
                    android:background="@color/blue"
                    android:gravity="center_vertical|center"
                    android:text="Thu"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/fri_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_weight="0.65"
                    android:background="@color/blue"
                    android:gravity="center_vertical|center"
                    android:text="Fri"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/sat_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_weight="0.65"
                    android:background="@color/blue"
                    android:gravity="center_vertical|center"
                    android:text="Sat"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/session_time_list_rcView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_2sdp"
            android:scrollbars="none" />
    </LinearLayout>

    <Button
        android:id="@+id/done_btn"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/submit_shape"
        android:gravity="center"
        android:text="Done"
        android:textColor="@color/blue"
        android:textSize="@dimen/_12sdp" />
</LinearLayout>