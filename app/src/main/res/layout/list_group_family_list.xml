<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_37sdp"
        android:background="@drawable/first_row"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_2sdp"
            android:visibility="visible">

            <TextView
                android:id="@+id/familyname_txt"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_33sdp"
                android:gravity="start|center_vertical"
                android:paddingLeft="@dimen/_3sdp"
                android:text="@string/family_name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/no_txt"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_33sdp"
                android:gravity="center|center_vertical"
                android:paddingLeft="@dimen/_2sdp"
                android:text="(7843568412)"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10sdp" />

            <Button
                android:id="@+id/addchild_txt"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_28sdp"
                android:background="@drawable/add_child_btn"
                android:gravity="center|center_vertical"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="Add Child"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/arrow_img"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/round_yello"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>
    </LinearLayout>
</layout>