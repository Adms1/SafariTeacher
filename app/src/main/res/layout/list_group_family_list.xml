<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_37sdp"
        android:background="@color/unselected_header"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_2sdp"
            android:visibility="visible">

            <RadioGroup
                android:id="@+id/familyname_rg"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_33sdp"
                android:gravity="center|center_vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/familyname_rb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@drawable/family_selected_unselected_type"
                    android:checked="false"
                    android:paddingLeft="@dimen/_3sdp"
                    android:tag="1"
                    android:text="@string/academic"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />

            </RadioGroup>

            <TextView
                android:id="@+id/no_txt"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_33sdp"
                android:gravity="center|center_vertical"
                android:paddingLeft="@dimen/_2sdp"
                android:text="7843568412"
                android:drawableLeft="@drawable/add_family_mob"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10sdp" />

            <Button
                android:id="@+id/addchild_txt"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_28sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:background="@drawable/add_child_btn"
                android:text="Add"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/arrow_img"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center|center_vertical"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>
    </LinearLayout>
</layout>