<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_class"
        android:orientation="vertical"
        android:weightSum="2"
        tools:context="com.adms.classsafari.Activites.AddSessionScreen">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/middle_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/_5sdp"-->
                <!--android:orientation="horizontal">-->


                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/first_row_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:text="@string/session_board"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center"
                            android:text=":" />

                        <TextView
                            android:id="@+id/board_txt"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_1sdp"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="@dimen/_52sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:text="Standard"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center"
                            android:text=":" />

                        <TextView
                            android:id="@+id/standard_txt"
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:text="@string/s_subject"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center"
                            android:text=":" />

                        <TextView
                            android:id="@+id/subject_txt"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_1sdp"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="@dimen/_52sdp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:text="Session"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center"
                            android:text=":" />

                        <TextView
                            android:id="@+id/session_name_txt"
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_txt_view"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:text="@string/date"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center"
                            android:text=":" />

                        <TextView
                            android:id="@+id/date_txt"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_1sdp"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/time_txt_view"
                            android:layout_width="@dimen/_52sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:gravity="center_vertical"
                            android:text="@string/batch_time"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center"
                            android:text=":" />

                        <TextView
                            android:id="@+id/time_txt"
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_1sdp"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:text="@string/total_student"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center"
                            android:text=":" />

                        <TextView
                            android:id="@+id/total_student_txt"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_1sdp"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />
                        <TextView
                            android:layout_width="@dimen/_52sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:gravity="center_vertical"
                            android:text="Class"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center"
                            android:text=":" />
                        <Spinner
                            android:id="@+id/class_spinner"
                            android:layout_width="@dimen/_95sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/dropdown_button"
                            android:forceHasOverlappingRendering="false"
                            android:overlapAnchor="false"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="1dp"
                            android:paddingTop="@dimen/_3sdp"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/header_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include layout="@layout/student_attendance_header" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_linear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_230sdp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!--<android.support.v7.widget.RecyclerView-->
                        <!--android:id="@+id/student_list_rcView"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:scrollbars="none" />-->
                    <ListView
                        android:id="@+id/student_list_rcView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/_20sdp"
                        android:scrollbars="none"
                        android:descendantFocusability="afterDescendants"
                        android:divider="@color/gray"
                        android:dividerHeight="0.2dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/no_record_txt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_1sdp"
                    android:text="No record found."
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/submit_btn"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/submit_shape"
                        android:gravity="center"
                        android:text="@string/submit"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/middle_linear"
            android:layout_weight="0.23"
            android:background="@color/search_boder"
            android:gravity="bottom|start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/session_email"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_35sdp"
                android:src="@drawable/s_e" />

            <ImageView
                android:id="@+id/session_search"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_85sdp"
                android:src="@drawable/s_ser"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/session_cal"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_195sdp"
                android:src="@drawable/s_cal" />
        </LinearLayout>
    </LinearLayout>
</layout>