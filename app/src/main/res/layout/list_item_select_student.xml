<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_line1"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/search_class"
                android:weightSum="7">

                <RadioGroup
                    android:id="@+id/name_rg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="2.4"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/name_rb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@drawable/absent_radio_type"
                        android:checked="false"
                        android:paddingLeft="@dimen/_3sdp"
                        android:tag="1"
                        android:text="@string/academic"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10sdp" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.02"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/absent"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/age_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1.3"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.02"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/blue"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/gender_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1.5"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="Male"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.02"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rating_bar"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/phone_no_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1.5"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="9999999990"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</layout>