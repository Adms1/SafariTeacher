<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="3">
        <!--android:background="@drawable/list_line"-->
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1.27"
            android:paddingLeft="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:text="Megha Shah"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />

        <RadioGroup
            android:id="@+id/attendance_status_rg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.80"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/present_chk"
                android:layout_width="@dimen/_31sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:button="@drawable/present_radio_type"
                android:gravity="center"
                android:tag="1"
                android:textAlignment="center"
                android:textSize="@dimen/_9sdp" />

            <RadioButton
                android:id="@+id/absent_chk"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:button="@drawable/absent_radio_type"
                android:tag="0"
                android:textAlignment="center"
                android:textSize="@dimen/_9sdp" />

            <RadioButton
                android:id="@+id/leave_chk"
                android:layout_width="@dimen/_31sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:button="@drawable/leave_radio_type"
                android:tag="-1"
                android:textAlignment="center"
                android:textSize="@dimen/_9sdp" />
        </RadioGroup>

        <EditText
            android:id="@+id/remark_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_weight="0.93"
            android:background="@drawable/remarks_text"
            android:hint="Remark"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:textAlignment="textStart"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>
</LinearLayout>