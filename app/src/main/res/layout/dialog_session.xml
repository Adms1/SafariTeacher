<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_3sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/session_name_txt_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Session Name"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/session_title_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1.28"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_1sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/text_color"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/date_txt_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Date"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.28"
            android:gravity="start"
            android:paddingLeft="@dimen/_1sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/text_color"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/start_time_txt_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="2.1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Time"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="0.32"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/start_time_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_1sdp"
            android:text="10:00"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/end_time_txt_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:text="To"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/end_time_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_1sdp"
            android:text="11:00"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/dark_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <Button
            android:id="@+id/edit_session_btn"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/submit_shape"
            android:gravity="center"
            android:text="Edit Session"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/add_attendance_btn"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/submit_shape"
            android:gravity="center"
            android:text="Add Attendance"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/submit_shape"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</LinearLayout>